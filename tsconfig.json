{
  "include": ["./index.js"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"]
}
